
@{
    ViewBag.Title = "Receive";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@Scripts.Render("~/Receive/js")
<div class="row text-center">
    <i style="color:red">(ยิงบาร์โค้ด TAG ล้อ เพื่อยืนยันของขึ้นรถ)</i>
</div>

<div class="row text-center">
    <div class="" style="">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 text-left">
            <div class="form-element-list">
                <input type="time" id="Time_Actual" class="form-control hidden">

                <div class="row">
                    <div class="col-lg-4 col-md-4 col-sm-3 col-xs-2">
                    </div>
                    <div class="col-lg-4 col-md-4 col-sm-6 col-xs-8">
                        <div class="col-lg-1">
                        </div>
                        <div class="col-lg-11">
                            <div class="form-group nk-datapk-ctm form-elet-mg">
                                <i>บาร์โค้ด TAG ล้อ</i><i style="color:red"> **</i><i id="Data_Location" style="color:red"></i>
                                <div class="input-group nk-int-st">
                                    <input id="TAG" type="text" class="form-control" placeholder="ยิงบาร์โค้ด TAG ล้อ" />
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-4 col-md-4 col-sm-3 col-xs-2">
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-4 col-md-4 col-sm-3 col-xs-2">
                    </div>
                    <div class="col-lg-4 col-md-4 col-sm-6 col-xs-8">
                        <div class="col-lg-1">
                        </div>
                        <div class="col-lg-11">
                            <div class="form-group nk-datapk-ctm form-elet-mg">
                                <i>ผู้บันทึก</i><i style="color:red"> **</i>
                                <div class="input-group nk-int-st">
                                    <input id="User" type="text" class="form-control" placeholder="กรอกรหัสผู้บันทึก" />
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-4 col-md-4 col-sm-3 col-xs-2">
                    </div>
                </div>

                <div class="row">
                    <div class="col-lg-4 col-md-4 col-sm-3 col-xs-2">
                    </div>
                    <div class="col-lg-4 col-md-4 col-sm-6 col-xs-8">
                        <div class="col-lg-1">
                        </div>
                        <div class="col-lg-11">
                            <div class="form-group nk-datapk-ctm form-elet-mg">
                                <i>ทะเบียนรถ</i><i style="color:red"> **</i><i style="color:red"></i>
                                <div class="input-group nk-int-st">
                                    <input id="Truck" type="text" class="form-control" placeholder="กรอกข้อมูลทะเบียนรถ" onkeyup="this.value=this.value.replace(/[^0-9.]/g,'')" />
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-4 col-md-4 col-sm-3 col-xs-2">
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 mg-t-10 text-center">
            <a id="Save" class="btn btn-success notika-btn-success btn-default">บันทึก</a>
            <a href="@Url.Action("Index", new {})" id="Clear" class="btn btn-success notika-btn-success btn-default">Clear</a>
        </div>
    </div>
</div>


